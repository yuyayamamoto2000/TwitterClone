<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
  <% @blogs.each do |blog|
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
      <td><%= link_to 'ブログを編集する', edit_blog_path(blog.id), date: { confirm: '本当に編集してもよろしいですか？' }%></td>
      <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete, date: { confirm: '本当に削除してもよろしいですか？' }%></td>
    </tr>
  <% end %>
</table>
<%= link_to '新しくブログを投稿する', new_blog_path %>
